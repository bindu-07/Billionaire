<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sender"
    android:layout_marginStart="60dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    android:paddingEnd="25dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:visibility="visible"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/sedername"/>
    <com.hendraanggrian.appcompat.widget.SocialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendermsg"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:text="The Message"
        android:textSize="16sp"
        app:hashtagColor="@color/colorPrimary"
        app:hyperlinkColor="@color/green"
        app:mentionColor="@color/red"
        app:socialFlags="hashtag|mention|hyperlink"
        android:textColor="@color/colorBlack"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="320dp"
        android:maxHeight="320dp"
        android:id="@+id/imagegrp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_images"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/timegrp"
        android:textColor="@color/colorBlack"
        android:textAlignment="textEnd"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"/>
</LinearLayout>