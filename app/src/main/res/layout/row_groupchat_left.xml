<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="60dp"
    android:background="@drawable/bg_receiver"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/sedername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <com.hendraanggrian.appcompat.widget.SocialTextView
        android:id="@+id/sendermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:text="The Message"
        app:hashtagColor="@color/colorPrimary"
        app:hyperlinkColor="@color/green"
        app:mentionColor="@color/red"
        app:socialFlags="hashtag|mention|hyperlink"
        android:textColor="@color/colorBlack" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp">
    <ImageView
        android:id="@+id/imagegrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:maxHeight="300dp"

        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_images" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timegrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Time"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />

</LinearLayout>